generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  googleId       String?      @unique
  password       String?
  refreshToken   String?
  failedAttempts Int          @default(0)
  lockUntil      DateTime?
  preferences    Preference[]
  progresses     Progress[]
}

model Preference {
  id         Int      @id @default(autoincrement())
  account    Account  @relation(fields: [accountId], references: [id])
  accountId  Int
  topics     String[]
  languages  String[]
}

model Progress {
  id         Int      @id @default(autoincrement())
  account    Account  @relation(fields: [accountId], references: [id])
  accountId  Int
  topic      String
  videoId    String
  status     String // e.g., 'watched', 'liked'
}
